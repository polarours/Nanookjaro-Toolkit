# Maintainer: Your Name <your.email@example.com>
pkgname=nanookjaro-toolkit-git
pkgver=0.1.0.r0.gf8e1a4b
pkgrel=1
pkgdesc="Cross-platform hardware detection and system monitoring toolkit for Manjaro/Arch - Git version"
arch=('x86_64')
url="https://github.com/polarours/Nanookjaro-Toolkit"
license=('MIT')
depends=('systemd' 'pciutils' 'smartmontools' 'flutter' 'pacman-contrib')
makedepends=('cmake' 'ninja' 'git')
provides=('nanookjaro-toolkit')
conflicts=('nanookjaro-toolkit')
source=('git+https://github.com/polarours/Nanookjaro-Toolkit.git')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/Nanookjaro-Toolkit"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd "$srcdir/Nanookjaro-Toolkit"
  # Prepare build environment if needed
}

build() {
  cd "$srcdir/Nanookjaro-Toolkit"
  
  # Build C++ core
  cmake -B build -S . \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DNANOOKJARO_ENABLE_INSTALL=ON
  
  cmake --build build
  
  # Build Flutter frontend
  cd frontend_flutter
  flutter pub get
  flutter build linux --release
}

package() {
  cd "$srcdir/Nanookjaro-Toolkit"
  
  # Install C++ core library
  DESTDIR="$pkgdir" cmake --install build
  
  # Install Flutter frontend
  install -Dm755 frontend_flutter/build/linux/x64/release/bundle/nanookjaro_frontend \
    "$pkgdir/usr/bin/nanookjaro-frontend"
  
  # Install desktop file
  install -Dm644 assets/nanookjaro.desktop \
    "$pkgdir/usr/share/applications/nanookjaro.desktop"
  
  # Install icons
  install -Dm644 assets/nanookjaro-icon.png \
    "$pkgdir/usr/share/icons/hicolor/256x256/apps/nanookjaro.png"
  
  # Install license
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}